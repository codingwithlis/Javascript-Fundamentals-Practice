function spiceThreshold (integer) {
if (integer === 0){
  return "No spice!";
}else if (integer > 0 && integer <= 3){
  return "Mild!";
}else if (integer > 3 && integer <= 7){
  return "Medium!";
}else if (integer > 7 && integer <= 10){
  return "Hot!"
}
}

